<select id='{{fieldname}}-type' onchange={{action "selectType" value="target.value"}}>
  {{#each typeContent as |polyType| }}
    <option value={{polyType.type}} selected={{eq field.transmitterType polyType.type}}>{{polyType.type}}</option>
  {{/each}}
</select>
<select id='{{fieldname}}-id' onchange={{action "selectId" value="target.value"}}>
  {{#each contentOfType as |polyID| }}
    <option value={{polyID.id}} selected={{eq field.id polyID.id}}>{{polyID.name}}</option>
  {{/each}}
</select>

<button {{action 'save'}}>Save</button>

