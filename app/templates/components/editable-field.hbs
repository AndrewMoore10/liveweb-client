<div>
{{#if isEditing }}
  {{#if isTextArea }}
    {{textarea value=field}}
  {{else if isSelect }}
    {{view "select"
       content=content
       optionValuePath=optionValuePath
       optionLabelPath=optionLabelPath
       selection=field}}
  {{else if isCheckbox }}
    {{input type=type checked=field}} {{field}}
  {{else}}
    {{input type=type value=field}}
  {{/if}}
{{else if hasAltLabel}}
  {{alt-label}} --Edit
{{else if hasBlock}}
  {{yield}} --Edit
{{else}}
  {{field}} --Edit
{{/if}}
</div>